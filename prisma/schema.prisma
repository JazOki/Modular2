// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String @db.VarChar(255)

}

model Admin {
  id          String  @id @default(uuid())
  usuario     String  @db.VarChar(50)
  nombre      String  @db.VarChar(100)
  apellidoPat String  @db.VarChar(100)
  apellidoMat String  @db.VarChar(100)
  correo      String  @db.VarChar(100)
  isEnable    Boolean @default(true)
  foto        String  @db.Text
  contrasena  String  @db.VarChar(255)
}

model Alumno {
  //id          String  @id @default(uuid())
  codigo      String  @id @db.VarChar(9)
  matricula   String  @db.VarChar(6)
  nombre      String  @db.VarChar(100)
  apellidoPat String  @db.VarChar(100)
  apellidoMat String  @db.VarChar(100)
  correo      String  @db.VarChar(100)
  isEnable    Boolean @default(true)
  foto        String  @db.Text
  contrasena  String  @db.VarChar(255)

  docente       Docente @relation(fields: [docenteCodigo], references: [codigo])
  docenteCodigo String  @db.VarChar(9)
}

model Docente {
  codigo      String   @id @db.VarChar(9)
  nombre      String   @db.VarChar(100)
  apellidoPat String   @db.VarChar(100)
  apellidoMat String   @db.VarChar(100)
  correo      String   @db.VarChar(100)
  isEnable    Boolean  @default(true)
  foto        String   @db.Text
  contrasena  String   @db.VarChar(255)
  alumnos     Alumno[]
}

model ProyectoE1 {
  id            String   @id @default(uuid())
  urldocumento  String   @db.Text
  estado        Estado   @default(Entregado)
  observacion   String   @db.VarChar(300)
  fechaRegistro DateTime @db.Date

}

model ProyectoE2 {
  id            String     @id @default(uuid())
  urldocumento  String     @db.Text
  estado        Estado     @default(Entregado)
  evaluacion    Evaluacion @default(Sin_evaluar)
  observacion   String     @db.VarChar(300)
  fechaRegistro DateTime   @db.Date
}

model ProyectoE3 {
  id            String   @id @default(uuid())
  urldocumento  String   @db.Text
  estado        Estado   @default(Entregado)
  observacion   String   @db.VarChar(300)
  fechaRegistro DateTime @db.Date
}

enum Estado {
  Entregado
  Debe_modificarse
  Revisado
  Modificado
}

enum Evaluacion {
  Acreditado
  No_acreditado
  Sin_evaluar
}
